#include <stdio.h>

// Define a union to represent a value that can be an integer, float, or string
union Data {
    int intValue;
    float floatValue;
    char strValue[20];
};

int main() {
    // Create a union variable
    union Data data;

    // Find and display the size of the union
    printf("Size of union Data: %zu bytes\n", sizeof(data));

    return 0;
}
